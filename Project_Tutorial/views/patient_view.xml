<?xml version="1.0" encoding="utf-8" ?>
<odoo>

     <!-- search view for patient model -->
    <record id="view_patient_menu_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
                <separator/>
                <filter name="filter_male" string="Male" domain="[('gender','=','male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender','=','female')]"/>
                <filter name="filter_other" string="Others" domain="[('gender','=','other')]"/>
            </search>
        </field>
    </record>

     <!-- tree view for patient model -->
    <record id="view_patient_menu_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
            </tree>
        </field>
    </record>


    <!-- form view for patient model -->
    <record id="view_patient_menu_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- action view for patient model -->
    <record id="view_patient_menu" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patients!
            </p>
        </field>
    </record>

    <!-- patient model er jonno menuitem -->
    <menuitem id="hospital_root_menu" name="Hospital" sequence="0"/>
    <menuitem id="menu_patient_root" name="Patients Details" parent="hospital_root_menu" sequence="0"/>
    <menuitem id="patient_menu" name="Patients" parent="menu_patient_root" action="view_patient_menu" sequence="0"/>
</odoo>