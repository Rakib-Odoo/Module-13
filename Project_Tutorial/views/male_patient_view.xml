<odoo>
    <record id="action_male_patient" model="ir.ui.view">
        <field name="name">Male Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('gender','=','male')]</field>
        <field name="help" type="html">
            <p>
                create your male patients
            </p>
        </field>
    </record>

    <menuitem id="male_patient_menu" name="Male Patients" action="action_male_patient" parent="menu_patient_root" sequence="2"/>
</odoo>