<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_doctor_menu_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="view_doctor_menu_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="avatar"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_doctor_menu" model="ir.actions.act_window">
        <field name="name">Doctors Info</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Create a new doctor here!!!!!!!
            </p>
        </field>
    </record>

    <menuitem id="doctor_menu"
              name="Doctors Info"
              parent="doctor_root"
              action="view_doctor_menu"
              sequence="0"/>

</odoo>