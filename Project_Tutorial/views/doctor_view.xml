<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_doctor_menu_kanban" model="ir.ui.view">
        <field name="name">hospital.doctor.kanban</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="oe_kanban_image">
                                        <img t-att-src="kanban_image('hospital.doctor','image',record.id.raw_value)"
                                             alt="avatar" class="o_image_64_contain"/>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    <div class="oe_kanban_details">
                                        <ul>
                                            <li>
                                                <h3>
                                                    <field name="name"/>
                                                </h3>
                                            </li>
                                            <li>
                                                <strong>
                                                    Age :
                                                </strong>
                                                <field name="age"/>
                                            </li>
                                            <li>
                                                <strong>
                                                    Gender :
                                                </strong>
                                                <field name="gender"/>
                                            </li>
                                            <li>
                                                <strong>
                                                    Description :
                                                </strong>
                                                <field name="note"/>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_doctor_menu_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sl"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="view_doctor_menu_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="sl"/>
                        </h1>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_doctor_menu" model="ir.actions.act_window">
        <field name="name">Doctors Info</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p>
                Create a new doctor here!!!!!!!
            </p>
        </field>
    </record>

    <menuitem id="doctor_menu"
              name="Doctors Info"
              parent="doctor_root"
              action="view_doctor_menu"
              sequence="1"/>

</odoo>